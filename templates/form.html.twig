{% extends 'base.html.twig' %}

{% block form %}
<div class="panel panel-default">
	<div class="panel-heading">
		<h4 class="panel-title">
			<a data-toggle="collapse" href="#collapse1">Combat stats</a>
		</h4>
	</div>
	<form class="panel-body panel-collapse collapse in form-horizontal" id="collapse1" method="get">
		<div class="row">
			<div class="col-sm-4">
				<h3>Combatant 1</h3>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c1-name">Name of C1</label>
					<div class="col-xs-7">
						<input class="form-control" id="c1-name" placeholder="Combatant1 name" name="c1[name]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c1-init">Initiate of C1</label>
					<div class="col-xs-7">
						<input class="form-control" id="c1-init" placeholder="Initiate of C1" name="c1[init]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c1-att">Attack of C1</label>
					<div class="col-xs-7">
						<input class="form-control" id="c1-att" placeholder="Attack of C1" name="c1[att]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c1-def">Defense of C1</label>
					<div class="col-xs-7">
						<input class="form-control" id="c1-def" placeholder="Defense of C1" name="c1[def]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c1-hp">HP of C1</label>
					<div class="col-xs-7">
						<input class="form-control" id="c1-hp" placeholder="HP of C1" name="c1[hp]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c1-armor">Armor of C1</label>
					<div class="col-xs-7">
						<input class="form-control" id="c1-armor" placeholder="Armor of C1" name="c1[armor]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c1-xatt">#Attacks of C1</label>
					<div class="col-xs-7">
						<input class="form-control" id="c1-xatt" placeholder="#Attacks of C1" name="c1[xatt]"></input>
					</div>
				</div>
			</div>

			<div class="col-sm-4">
				<h3>Combatant 2</h3>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c2-name">Name of C2</label>
					<div class="col-xs-7">
						<input class="form-control" id="c2-name" placeholder="Combatant1 name" name="c2[name]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c2-init">Initiate of C2</label>
					<div class="col-xs-7">
						<input class="form-control" id="c2-init" placeholder="Initiate of C2" name="c2[init]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c2-att">Attack of C2</label>
					<div class="col-xs-7">
						<input class="form-control" id="c2-att" placeholder="Attack of C2" name="c2[att]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c2-def">Defense of C2</label>
					<div class="col-xs-7">
						<input class="form-control" id="c2-def" placeholder="Defense of C2" name="c2[def]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c2-hp">HP of C2</label>
					<div class="col-xs-7">
						<input class="form-control" id="c2-hp" placeholder="HP of C2" name="c2[hp]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c2-armor">Armor of C2</label>
					<div class="col-xs-7">
						<input class="form-control" id="c2-armor" placeholder="Armor of C2" name="c2[armor]"></input>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-xs-5" for="c2-xatt">#Attacks of C2</label>
					<div class="col-xs-7">
						<input class="form-control" id="c2-xatt" placeholder="#Attacks of C2" name="c1[xatt]"></input>
					</div>
				</div>
			</div>
			<div class="col-sm-4">
				<h3>Simulation settings</h3>
				<div class="form-group">
					<label class="control-label col-xs-5" for="battles">Number of battles</label>
					<div class="col-xs-7">
						<input class="form-control" id="battles" placeholder="Number of battles" name="battles"></input>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-12">
						<label>
							<input type="checkbox" name="cx2"> CX2
						</label>
					</div>
				</div>
				<div class="form-group">
					<div class="col-xs-12">
						<button type="submit" class="btn btn-lg btn-primary btn-block">Start simulation</button>
					</div>
				</div>
			</div>
		</div>

	</form>
</div>
{% endblock %}

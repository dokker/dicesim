<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
{% for round in rounds %}
	<div class="list-group round">
		<h2 class="list-group-item active round-num">Round {{round.num}}</h2>
		{% for action in round.actions %}
			<div class="list-group-item attack {{ action.success == true ? 'success' : '' }}">
				<h3 class="list-group-item-heading">{{ action.attacker.name }} attacks with {{ action.attacker.roll }}</h3>
				<div class="result">
					{% if action.success == true %}
						<p class="list-group-item-text">{{ action.enemy.name }} suffers {{ action.enemy.hpdamage }} HP and {{ action.enemy.defdamage }} Defense</p>
					{% else %}
						<p class="label label-danger">miss</p>
					{% endif %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endfor %}
</div>

</body>
</html>